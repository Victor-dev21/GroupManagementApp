<%=link_to "Home", homepage_path%>
<%=link_to "My tasks", tasks_path%>
<%=link_to "My projects", user_projects_path(@user.id)%>
<a href="/logout">logout</a>
<u><h1><%=link_to @project.name, user_project_path(@user.id,@project.id)%></h1></u>

<h2><%=@task.name%></h2>
<h3>Asignee: <%=@assignee%></h3>
<%if(@task.creator == @user.id)%>
<%=button_to "Edit", edit_project_task_path(@project.id,@task.id), method:"get"%> <br>
<%=button_to "Delete", delete_task_path(@task.id), method:"delete"%>
<%end%>
