<%=link_to "Home", homepage_path%>
<%=link_to "My tasks", tasks_path%>
<%=link_to "My projects", user_projects_path(@user.id)%>
<a href="/logout">logout</a>
<h1>My tasks </h1>
<%@tasks.each do |task|%>
<%if !task.assignee.nil?%>
<%=link_to task.name, task_path(task.id)%><%=User.find(task.assignee).name%><br>
<%else%>
<%=link_to task.name, task_path(task.id)%> No Assignee<br>
<%end%>
<%end%>
<h4>Assigned tasks</h4>
<%@assigned_tasks.each do |task|%>
<%=link_to task.name, task_path(task.id)%><br>
<%end%>
