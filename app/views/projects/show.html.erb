
<u><h1><%=@project.name%></h1></u>
<%if(@project.creator == @user.id)%>
<%=button_to "New task", new_project_task_path(@project.id),  method:"get"%><br>
<%=button_to "New section", new_project_section_path(@project.id), method:"get"%><br>
<%end%>

<%@sections.each do |section|%>
<%if(section.creator == @user.id)%>
<h2><u><%=link_to section.name, project_section_path(@project.id,section.id)%></u></h2>
Status: <%=section.status%>
<%=button_to "Edit", edit_project_section_path(@project.id,section.id),  method:"get"%><br>
<%=button_to "Delete", delete_section_path(@project.id,section.id), method:"delete"%><br>
<%end%>
<%section.tasks.each do |task|%>
<%=link_to task.name, project_task_path(@project.id,task.id)%> [Status: <%=task.status%>]
<%task.users.each do |user|%>
  Original creator:<%=user.name%>
<%end%>
<br>
<%end%>
<hr>
<%end%>
