<u><h1><%=@project.name%></h1></u>
<%=button_to "New task", new_project_task_path(@project.id),  method:"get"%><br>
<%=button_to "New section", new_project_section_path(@project.id), method:"get"%><br>


<%@sections.each do |section|%>
<h2><u><%=link_to section.name, project_section_path(@project.id,section.id)%></u></h2>

<%section.tasks.each do |task|%>
<%=link_to task.name, project_task_path(@project.id,task.id)%><br>
<%end%>
<hr>
<%end%>
