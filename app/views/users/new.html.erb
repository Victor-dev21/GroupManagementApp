<h1>Create an account</h1>



<%=form_for @user do |f|%>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h5>Errors:</h5>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="field <%= ' field_with_errors' if @user.errors[:name].any? %>">
  <%=f.label :name%> <%=f.text_field :name%><br>
</div>
<div class="field <%= ' field_with_errors' if @user.errors[:username].any? %>">
  <%=f.label :username%> <%=f.text_field :username%><br>
</div>
<div class="field <%= ' field_with_errors' if @user.errors[:password].any? %>">
  <%=f.label :password%> <%=f.text_field :password%><br>
</div>

<%=f.submit%>

<%end%>
